<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <include
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtLocationName"
                    style="@style/edit_text_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Location Name"
                    android:inputType="textPersonName"
                    android:padding="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_add_Location"
                    style="@style/txt_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="@string/add_location_title1"
                    android:textColor="@color/black" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/ratingBathRoom"
                style="@style/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:numStars="5"
                android:progressDrawable="@drawable/custom_rating_bar"
                android:stepSize="0.1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/detail_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                android:orientation="horizontal"

                >

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_Squat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_radio_ad_location"
                        android:button="@android:color/transparent"
                        android:checked="true" />

                    <TextView
                        style="@style/txt_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:clickable="true"
                        android:text="Squat"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/txt_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:clickable="true"
                        android:text="or"
                        android:textColor="@color/dark_blue"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radio_Sit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_radio_ad_location"
                        android:button="@android:color/transparent" />

                    <TextView
                        style="@style/txt_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:clickable="true"
                        android:text="Sit"
                        android:textColor="@color/black" />
                </RadioGroup>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtBth"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Bathroom Best for :"
                android:textColor="@color/black" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/radiogrpBestFor"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/radioMale"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/radioFemale" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Both"
                    android:checked="true"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/radioBoth" />
            </RadioGroup>
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edtBathRoomDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_bar"
                    android:gravity="top"
                    android:hint="Give Review"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:maxLines="5"
                    android:overScrollMode="always"
                    android:padding="10sp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:textColorHint="@color/light_gray" />
            </LinearLayout>


            <FrameLayout
                android:id="@+id/Image_Upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/layout_imageCLick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_location_profile_pic_border"
                    android:gravity="center_vertical|center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_photo_icon" />

                    <TextView
                        android:id="@+id/add_a_photo_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:clickable="true"
                        android:text="Add a photo"
                        android:textColor="@color/dark_blue"
                        android:textSize="12sp" />
                </LinearLayout>
            </FrameLayout>

            <com.widgets.HorizontalListView
                android:id="@+id/hrzListView"
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:divider="#878787"
                widget:dividerWidth="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|bottom"
                android:layout_marginBottom="30sp"
                android:layout_marginTop="20sp"
                android:gravity="center_vertical|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_AddLocation"
                    style="@style/button_txtstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_box"
                    android:clickable="true"
                    android:drawableLeft="@drawable/add_bathroom_icon"
                    android:gravity="center_vertical|center"
                    android:paddingBottom="5sp"
                    android:paddingLeft="20sp"
                    android:text="Add This Location" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>